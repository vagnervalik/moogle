@page "/"
@inject IJSRuntime JSRuntime
<PageTitle>Moogle!</PageTitle>

<h1>🔍 Moogle!</h1>

<input class="p-1 my-4" @bind="query" placeholder="Introduzca su búsqueda">  

<button type="default" class="btn btn-primary" @onclick="RunQuery">🔍 Buscar</button>



@if (!string.IsNullOrEmpty(result.Suggestion)) {
    <div class="suggestion" >
        <p>Resultados para: <strong><a href="#">@result.Suggestion</a></strong>?</p>
        <p>¿Desea buscar <strong><a href="#">@query</a></strong> en su lugar?</p>
    </div>
}

<ul class="results">
@foreach (var item in result.Items()) {
    <li>
        <div class="item">
            <p class="title"><a href="#">@item.Title</a></p>
            <p>... @item.Snippet ...</p>
        </div>
    </li>
}
</ul>

@code {
    private string query = "";
    private SearchResult result = new SearchResult();
    private Moogle moogle;
    protected override void OnInitialized(){
        moogle = new Moogle(@"..\Content");
        ShowAlert();
    }
    private void ShowAlert(){
    JSRuntime.InvokeVoidAsync("alert", "Database loaded!");
    }
    private void RunSuggestion(){
        result = moogle.Query(result.Suggestion);
    }
    private void RunQuery() {
        result = moogle.Query(query);
    }
}
